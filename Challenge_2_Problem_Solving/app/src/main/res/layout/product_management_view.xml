<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".test1.ProductManagement">

    <LinearLayout
        android:id="@+id/productListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/calculateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultText">

        <!-- Example product item -->
        <TextView
            android:id="@+id/product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laptop - Price: 999.99 - Quantity: 5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smartphone - Price: 499.99 - Quantity: 10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tablet - Price: 299.99 - Quantity: 8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smartwatch - Price: 199.99 - Quantity: 3"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tính toán" />

        <TextView
            android:id="@+id/resultText"
            android:paddingTop="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả sẽ xuất hiện ở đây"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>